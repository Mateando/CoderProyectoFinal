@page "/users"
@inject UserServices Service

<h3>Lista de Usuarios</h3>

<div class="container">
    <div class="row">
        <div class="col-6">
            <a href="/users/new" class="btn btn-success">
                Crear
            </a>
        </div>
        <div class="col-6">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Filtrar por..." @bind="filtro" />
                <button type="button" class="btn btn-outline-secondary" @onclick="Find">
                    Buscar
                </button>
            </div>
        </div>
    </div>
    <div class="row">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Nombre </th>
                    <th>Apellido </th>
                    <th>NombreUsuario </th>
                    <th>Email </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (UserEntity user in users)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name </td>
                        <td>@user.LastName </td>
                        <td>@user.UserName </td>
                        <td>@user.Mail </td>
                        <td>
                            <a href="/users/@user.Id/edit" class="btn btn-primary" >Editar</a>
                        </td>
                        <td>
                            <button @onclick="@(() => UserDelete(user.Id))" class="btn btn-danger">
                                Eliminar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
@code {
    private List<UserEntity> users = [];

    private string filtro = string.Empty;



    protected override void OnInitialized()
    {
        users = Service.GetUsers();
    }

    public void UserDelete(int id)
    {
        //Service.UserDelete(id);
        users = Service.GetUsers();
    }

    public void Find()
    {
        users = Service.GetUserBy(filtro);
    }
}